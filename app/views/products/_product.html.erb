<tr id="<%= dom_id product %>">
  <td class="px-6 py-4"><%= product.id %></td>
  <td class="px-6 py-4">
    <img src="<%= product.landing_image %>" alt="">
  </td>
  <td class="px-6 py-4"><%= product.title %></td>
  <td class="px-6 py-4"><%= product.brand %></td>
  <td class="px-6 py-4"><%= product.price %></td>
  <td class="px-6 py-4">
    <% product.images&.each do |image| %>
      <span><%= image %></span>
    <% end %>
  </td>
  <td class="px-6 py-4"><%= simple_format(product.description) %></td>
  <td class="px-6 py-4"><%= product.url %></td>
  <td class="px-6 py-4"><%= link_to "View", product_path(product), class: "btn btn-primary", data: { turbo_stream: "true" } %></td>
</tr>
